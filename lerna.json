{
  "packages": [
    "packages/*"
  ],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "version": "10.0.1",
  "command": {
    "publish": {
      "ignoreChanges": [
        "*.md",
        "__test__/**",
        "__fixtures__/**",
        "**/*.test.{j|t}s",
        "@(!(package)).json"
      ]
    }
  }
}
